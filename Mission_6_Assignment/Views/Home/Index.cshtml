@model List<Mission_6_Assignment.Models.Movie>

@{
    ViewData["Title"] = "Joel Hilton Movie Collection";
}

<div class="text-center mb-4">
    <h1 class="display-4">The Joel Hilton Film Collection</h1>
    <img src="~/img/hilton's brother.jpg" alt="Joel's headshot" class="rounded shadow" style="max-height: 200px;" />
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Copied to Plex</th>
                <th>Lent To</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@(movie.Category != null ? movie.Category.CategoryName : "N/A")</td>
                    <td class="fw-bold">@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                    <td class="text-center">@(movie.Edited ? "Yes" : "No")</td>
                    <td class="text-center">@(movie.CopiedToPlex ? "Yes" : "No")</td>
                    <td>@movie.LentTo</td>
                    <td class="small">@movie.Notes</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>